<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/addNotes"
    android:padding="25dp"
    tools:context=".NotesAddActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/AddAppBar"
        android:gravity="center">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/back"
            android:src="@drawable/back" />

        <Button
            android:layout_width="85dp"
            android:layout_height="50dp"
            android:id="@+id/notesDone"
            android:layout_marginLeft="220dp"
            android:text="Done" />
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/AddAppBar"
        android:layout_marginTop="30dp"
        android:id="@+id/title"
        android:textSize="25sp"
        android:textColor="@color/black"
        android:textStyle="bold"

        android:text="TITLE"/>
    <EditText
        android:layout_below="@id/title"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_marginTop="5dp"
        android:id="@+id/titleId"
        android:background="@drawable/edittext_rounded"
        android:hint="Title"
        android:inputType="text"
        android:padding="10dp"
        android:textColor="@color/black"
        android:textStyle="bold"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/titleId"
        android:layout_marginTop="10dp"
        android:id="@+id/content"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        android:text="CONTENT"/>
    <EditText
        android:layout_below="@id/content"
        android:layout_width="fill_parent"
        android:layout_height="100dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/edittext_rounded"
        android:textColor="@color/black"
        android:padding="10dp"
        android:inputType="text"
        android:id="@+id/contentId"
        android:hint="Content"
        />

        <LinearLayout
            android:layout_below="@id/contentId"
            android:layout_marginTop="80sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:layout_width="50dp"
                android:layout_height="60dp"
                android:id="@+id/color1"
                android:backgroundTint="@color/noteColor1"/>

            <Button
                android:layout_width="50dp"
                android:layout_height="60dp"
                android:id="@+id/color2"
                android:layout_marginLeft="45dp"
                android:backgroundTint="@color/noteColor2"/>

            <Button
                android:layout_width="50dp"
                android:layout_height="60dp"
                android:id="@+id/color3"
                android:layout_marginLeft="45dp"
                android:backgroundTint="@color/noteColor3"/>
            <Button
                android:layout_width="50dp"
                android:layout_height="60dp"
                android:id="@+id/color4"
                android:layout_marginLeft="45dp"
                android:backgroundTint="@color/noteColor4"/>
        </LinearLayout>
</RelativeLayout>